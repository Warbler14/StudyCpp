{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			//"label": "g++ build active file",
			"label": "C/C++: clang++ build active file",
			//"command": "/usr/bin/g++",
			"command": "/usr/bin/clang++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileWorkspaceFolder}/objects/${fileBasenameNoExtension}.out"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}